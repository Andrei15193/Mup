<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <TargetFrameworks>net20;net45;netstandard1.0;netcoreapp1.0</TargetFrameworks>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>Mup.snk</AssemblyOriginatorKeyFile>
    <DelaySign>False</DelaySign>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Mup</PackageId>
    <PackageVersion>1.1.0-beta1</PackageVersion>
    <Authors>Andrei15193</Authors>
    <Description>Markup Parser (Mup) is an extensible .NET Standard Library (1.0) containing types for parsing and generating HTML from text using the Creole lightweight markup language.</Description>
    <Title>Mup</Title>
    <PackageProjectUrl>http://www.mup-project.net/</PackageProjectUrl>
    <PackageLicenseUrl>http://www.mup-project.net/#license</PackageLicenseUrl>
    <PackageIconUrl>https://mupstore.blob.core.windows.net/nuget/logo.png</PackageIconUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>Added support for .NET 2.0. Added Begin/End asynchronous pattern variant (mostly for .NET 2.0).</PackageReleaseNotes>
    <Copyright>Andrei Fangli</Copyright>
    <PackageTags>lightweight markup language parser creole net standard html portable library</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateFullPaths>True</GenerateFullPaths>
    <DefineConstants Condition="'$(Configuration)'=='Debug'">DEBUG;$(DefineConstants)</DefineConstants>
    <DefineConstants Condition="'$(Configuration)'=='Release'">RELEASE;$(DefineConstants)</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='net20'">net20;$(DefineConstants)</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='net45'">net45;$(DefineConstants)</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='netcoreapp1.0'">netcoreapp10;$(DefineConstants)</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='net20' OR '$(TargetFramework)'=='net45'">net;$(DefineConstants)</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='netstandard1.0' OR '$(TargetFramework)'=='net45' OR '$(TargetFramework)'=='netcoreapp1.0'">netstandard10;$(DefineConstants)</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DocumentationFile>bin\Release\Mup.xml</DocumentationFile>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
  </PropertyGroup>

</Project>
