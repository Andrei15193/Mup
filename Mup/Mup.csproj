<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net20;net45;netstandard1.0;netcoreapp1.0</TargetFrameworks>
    <Version>1.1.0-beta</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Authors>Andrei Fangli</Authors>
    <Title>Mup</Title>
    <Description>Markup Parser (Mup) is an extensible .NET Standard Library (1.0) containing types for parsing and generating HTML from text using the Creole lightweight markup language.</Description>
    <PackageId>Mup</PackageId>
    <PackageTags>lightweight markup language parser creole net standard html portable library</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>http://www.mup-project.net/</PackageProjectUrl>
    <Copyright>Andrei Fangli</Copyright>
    <PackageLicenseUrl>http://www.mup-project.net/#/license</PackageLicenseUrl>
    <PackageIconUrl>https://mupstore.blob.core.windows.net/nuget/logo.png</PackageIconUrl>
    <Product>Mup</Product>
    <Company>Andrei Fangli</Company>
  </PropertyGroup>

  <PropertyGroup>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>Mup.snk</AssemblyOriginatorKeyFile>
    <DelaySign>False</DelaySign>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateFullPaths>True</GenerateFullPaths>
    <DefineConstants Condition="'$(Configuration)'=='Debug'">$(DefineConstants);DEBUG</DefineConstants>
    <DefineConstants Condition="'$(Configuration)'=='Release'">$(DefineConstants);RELEASE</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='net20'">$(DefineConstants);net20</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='net45'">$(DefineConstants);net45</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='netcoreapp1.0'">$(DefineConstants);netcoreapp10</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='net20' OR '$(TargetFramework)'=='net45'">$(DefineConstants);net</DefineConstants>
    <DefineConstants Condition="'$(TargetFramework)'=='netstandard1.0' OR '$(TargetFramework)'=='net45' OR '$(TargetFramework)'=='netcoreapp1.0'">$(DefineConstants);netstandard10</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DocumentationFile>bin\Release\netstandard1.0\Mup.xml</DocumentationFile>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
  </PropertyGroup>

</Project>
