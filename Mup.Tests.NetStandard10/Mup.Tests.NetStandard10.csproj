<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <IsPackable>False</IsPackable>
  </PropertyGroup>

  <PropertyGroup>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>Mup.Tests.NetStandard10.snk</AssemblyOriginatorKeyFile>
    <DelaySign>False</DelaySign>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateFullPaths>True</GenerateFullPaths>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="15.5.0" />
    <PackageReference Include="xunit" Version="2.3.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.3.1" />
  </ItemGroup>

  <ItemGroup>
    <!-- <ProjectReference Include="..\Mup\Mup.csproj" /> -->
    <Reference Include="Mup.dll">
      <HintPath>..\Mup\bin\$(Configuration)\netstandard1.0\Mup.dll</HintPath>
    </Reference>

    <!-- <ProjectReference Include="..\Mup.Tests\Mup.Tests.csproj" /> -->
    <Reference Include="Mup.Tests.dll">
      <HintPath>..\Mup.Tests\bin\$(Configuration)\netcoreapp1.0\Mup.Tests.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
