{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "msbuild /t:restore,build /p:Configuration=Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test .NET Framework 2.0",
            "dependsOn": "Build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Mup.Tests.Net20/Mup.Tests.Net20.csproj",
                "--no-build"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test .NET Framework 4.5",
            "dependsOn": "Build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Mup.Tests.Net45/Mup.Tests.Net45.csproj",
                "--no-build"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test .NET Core",
            "dependsOn": "Build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Mup.Tests.NetCore10/Mup.Tests.NetCore10.csproj",
                "--no-build"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test .NET Standard 1.0",
            "dependsOn": "Build",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Mup.Tests.NetStandard10/Mup.Tests.NetStandard10.csproj",
                "--no-build"
            ],
            "group": "test",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test",
            "dependsOn": [
                "Test .NET Framework 2.0",
                "Test .NET Framework 4.5",
                "Test .NET Core",
                "Test .NET Standard 1.0"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Release",
            "type": "shell",
            "command": "msbuild /t:restore,build /p:Configuration=Release",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Pack",
            "type": "shell",
            "command": "msbuild /t:restore,rebuild,pack /p:Configuration=Release",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "msbuild /t:clean /p:Configuration=Debug;msbuild /t:clean /p:Configuration=Release",
            "problemMatcher": "$msCompile"
        }
    ]
}